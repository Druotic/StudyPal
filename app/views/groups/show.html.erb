<div class="row">
	<div class="box-left col-md-8">
		<h3>Qualifications</h3>
		<ul>
			<li>First</li>
			<li>Second</li>
		</ul>
	</div>


	<div class="box-right col-md-4">
		<p>
			<strong>Leader:</strong>
			<%= @group.leader %>
		</p>

		<p>
			<strong>Course:</strong>
			<%= @group.course %>
		</p>

		<p>
			<strong>Particpant number:</strong>
			<%= @group.participantNumber %>
		</p>

		<p>
			<strong>Frequency:</strong>
			<%= @group.frequency %>
		</p>

		<p>
			<strong>Place:</strong>
			<%= @group.place %>
		</p>

		<p>
			<strong>Time:</strong>
			<%= @group.time %>
		</p>

		<p>
			<strong>Day:</strong>
				<% if @group.dayOfWeek.blank? %>
					Undecided
				<% else %>
					<%= @group.dayOfWeek %>
				<% end %>
		</p>

		<p>
			<strong>Date:</strong>
			<%= @group.date %>
		</p>
	</div>
</div>

