<h1>New Group</h1>

<%= form_for :group, url:groups_path do |g| %>
  <p>
    <%= g.label :leader %><br>
    <%= g.text_field :leader %>
  </p>
 
  <p>
    <%= g.label :course %><br>
    <%= g.text_field :course %>
  </p>

  <p>
    <%= g.label :frequency %><br>
    <%= g.text_field :frequency %>
  </p>

  <p>
    <%= g.label :place %><br>
    <%= g.text_field :place %>
  </p>

  <p>
    <%= g.label :time %><br>
    <%= g.time_field :time %>
  </p>

  <p>
    <%= g.label :dayOfWeek %><br>
    <%= g.text_field :dayOfWeek %>
  </p>

  <p>
    <%= g.label :date %><br>
    <%= g.date_field :date %>
  </p>
 
  <p>
    <%= g.submit %>
  </p>
<% end %>