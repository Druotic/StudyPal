<%= form_for :group, url:groups_path do |g| %>
  <div>
    <h1 class="header">New Group</h1>

    <%= g.hidden_field :leader_id, value: current_user._id %>
    <%= g.hidden_field :member_id, value: current_user._id %>

    <p>
      <%= g.label :title %><br>
      <%= g.text_field :title %>
    </p>

    <p>
      <%= g.label :course %><br>
      <%= g.text_field :course %>
    </p>

    <p>
      <%= g.label :frequency %><br>
      <%= g.select :frequency, options_for_select(%w[Once Weekly Monthly Other]), {},  class: 'form-control' %>
    </p>
  </div>
  <hr>
  <div class="row">
    <h3 class="header">Optional Info</h3>
    <div class="col-md-3">
      <p>
        <%= g.label :place %><br>
        <%= g.text_field :place %>
      </p>

      <p>
        <%= g.label :time %><br>
        <%= g.time_field :time %>
      </p>

      <p>
        <%= g.label "Date (first meeting)" %><br>
        <%= g.date_field :date %>
      </p>
    </div>
    <div class="col-md-7">
      <p>
        <%= g.label "Notes - Description, Requirements, etc..." %><br>
        <%= g.text_area :description, size: "100x8", maxlength: 600 %>
      </p>
    </div>
  </div>
  <p class="create-group-submit" >
    <%= g.submit "Create Group", class: 'btn btn-primary' %>
  </p>
<% end %>